<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-3">
      <h1>Edit Event</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
<%= form_for @mapevent do |f| %>
  <div class='form-group'>
    Event Name
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class='form-group'>
    Category
    <%= f.select :category, options_for_select([['Business', 'business'], ['Film & Media', 'filmmedia'], ['Arts', 'arts'], ['Health', 'health'], ['Music', 'music'], ['Food & Drinks', 'fooddrinks'], ['Hobbies', 'hobbies'], ['Other', 'other']]), class: "list-select" %>
  </div>
  <div class='form-group'>
    Address
    <%= f.text_field :address, class: 'form-control' %>
  </div>
  <div class='form-group'>
    City
    <%= f.text_field :city, class: 'form-control' %>
  </div>
  <div class='form-group'>
    State
    <%= f.text_field :state, class: 'form-control' %>
  </div>
  <div class='form-group'>
    Zip Code
    <%= f.text_field :zip, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.submit 'Submit Changes', class: 'form-control btn btn-primary' %>
  </div>
<% end %>
</div>
  </div>
</div>